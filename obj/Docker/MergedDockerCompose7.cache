networks:
  backend:
    driver: bridge
services:
  db:
    container_name: GraphQL.SqlServer
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: test$$123
    image: mcr.microsoft.com/mssql/server
    networks:
      backend: {}
    ports:
    - published: 1433
      target: 1433
  graphql.users.api:
    build:
      context: C:\localRepository\2020_11_02_GraphQ
      dockerfile: GraphQL.Users.Api/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: GraphQL.Users.Api
      target: base
    container_name: GraphQL.Users.Api
    depends_on:
      db:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: https://+:443;http://+:80
      ConnectionStrings__UsersConnection: Server=db;Database=Users;User=sa;Password=test$$123;Integrated
        Security=False;MultipleActiveResultSets=True
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: graphqlusersapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  "/app/bin/Debug/netcoreapp3.1/GraphQL.Users.Api.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    networks:
      backend: {}
    ports:
    - target: 80
    - published: 5000
      target: 443
    - target: 443
    tty: true
    volumes:
    - /c/localRepository/2020_11_02_GraphQ/GraphQL.Users.Api:/app:rw
    - /c/Users/Pawe│/vsdbg/vs2017u5:/remote_debugger:rw
    - /c/Users/Pawe│/AppData/Roaming/ASP.NET/Https:/root/.aspnet/https:ro
    - /c/Users/Pawe│/AppData/Roaming/Microsoft/UserSecrets:/root/.microsoft/usersecrets:ro
    - /c/Program Files/dotnet/sdk/NuGetFallbackFolder:/root/.nuget/fallbackpackages:ro
    - /c/Users/Pawe│/.nuget/packages:/root/.nuget/packages:ro
    - /c/localRepository/2020_11_02_GraphQ:/src:rw
version: '3.4'